<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/newClientsLayout"
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="30dp"
                android:id="@id/newClientContainerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ВХОД В СИТЕМАТА"
                android:layout_marginTop="30dp"
                android:layout_alignParentRight="false"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <TextView
                    android:id="@id/newClientUserLabel"
                    android:clickable="false"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="Потребител:"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:gravity="right"
                    android:layout_marginRight="10dp"/>

                <EditText
                    android:id="@id/userNameField"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:drawSelectorOnTop="true"
                    android:layout_weight=".6"
                    android:layout_marginRight="40dp"
                    android:inputType="textPersonName">

                    <requestFocus/>
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <TextView
                    android:id="@id/passwordLabel"
                    android:clickable="false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="Парола:"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:gravity="right"
                    android:layout_marginRight="10dp"/>

                <EditText
                    android:id="@id/passwordField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:password="true"
                    android:layout_weight=".6"
                    android:layout_marginRight="40dp"
                    android:inputType="textPassword"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <TextView
                    android:id="@id/newClient"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Нов Клиент"
                    android:gravity="left"/>

                <TextView
                    android:id="@id/lostPassword"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Забравена парола"
                    android:gravity="right"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="90dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"/>

        <Button
            android:enabled="true"
            android:id="@id/clientLoginButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ВХОД"
            android:textSize="30dp"
            android:layout_weight=".6"
            android:layout_marginRight="40dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"/>

    </LinearLayout>
</LinearLayout>